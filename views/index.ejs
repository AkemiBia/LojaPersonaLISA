<!-- Newsletter -->
<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 text-center">
                <h3 class="mb-3">Fique por dentro das novidades!</h3>
                <p class="text-muted mb-4">
                    Receba em primeira mão sobre lançamentos, promoções e produtos exclusivos K-pop!
                </p>
                <form class="row g-2 justify-content-center" action="/newsletter" method="POST">
