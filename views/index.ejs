
<!-- Hero Section -->
<section class="hero-section bg-gradient-purple text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">
                    Bem-vindo à PersonaLISA!
                </h1>
                <p class="lead mb-4">
                    Produtos únicos K-pop, anime e cultura pop, feitos com muito amor e carinho. 
                    TWICE, Pokémon, Studio Ghibli, BLACKPINK, Stray Kids e muito mais!
                </p>
                <div class="hero-badges mb-4">
                    <span class="badge bg-light text-dark me-2">
                        <i class="fas fa-truck"></i> Frete grátis comprando 2 ou mais
                    </span>
                    <span class="badge bg-warning text-dark">
                        <i class="fas fa-percentage"></i> Desconto em todos os produtos
                    </span>
                </div>
                <a href="/produtos" class="btn btn-light btn-lg">
                    Ver Produtos <i class="fas fa-arrow-right ms-2"></i>
                </a>
            </div>
            <div class="col-lg-6">
                <div class="hero-image text-center">
                    <!-- Placeholder para futura imagem do banner -->
                    <div class="hero-placeholder">
                        <i class="fas fa-star fa-5x text-white mb-3" style="opacity: 0.3;"></i>
                        <h3 class="text-white" style="opacity: 0.3;">PersonaLISA</h3>
                        <p class="text-white" style="opacity: 0.2;">K-pop & Anime Store</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Produtos TWICE ♡ -->
<% if (chaveiros && chaveiros.length > 0) { %>
<section class="py-5">
    <div class="container">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h2 class="section-title">
                <i class="fas fa-music me-2 text-primary"></i>
                Produtos TWICE ♡
            </h2>
            <a href="/produtos?categoria=twice" class="btn btn-outline-primary">Ver todos</a>
        </div>
        
        <div class="row">
            <% chaveiros.forEach(product => { %>
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <%- include('partials/product-card', { product: product }) %>
                </div>
            <% }) %>
        </div>
        
        <div class="text-center mt-4">
            <p class="text-muted">
                <i class="fas fa-heart text-danger me-1"></i>
                Camisetas oficiais e produtos únicos inspirados no TWICE para Once apaixonadas!
            </p>
        </div>
    </div>
</section>
<% } %>

<!-- Novidades! ♡ -->
<% if (newProducts && newProducts.length > 0) { %>
<section class="py-5 bg-light">
    <div class="container">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h2 class="section-title">Novidades! ♡</h2>
            <a href="/produtos?sort=newest" class="btn btn-outline-primary">Ver todas</a>
        </div>
        
        <div class="row">
            <% newProducts.forEach(product => { %>
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <%- include('partials/product-card', { product: product }) %>
                </div>
            <% }) %>
        </div>
    </div>
</section>
<% } %>

<!-- Mais Vendidos ♡ -->
<% if (bestSellers && bestSellers.length > 0) { %>
<section class="py-5">
    <div class="container">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h2 class="section-title">Mais Vendidos ♡</h2>
            <a href="/produtos?sort=featured" class="btn btn-outline-primary">Ver todos</a>
        </div>
        
        <div class="row">
            <% bestSellers.forEach(product => { %>
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <%- include('partials/product-card', { product: product }) %>
                </div>
            <% }) %>
        </div>
    </div>
</section>
<% } %>

<!-- K-pop Collection! -->
<% if (receitas && receitas.length > 0) { %>
<section class="py-5 bg-light">
    <div class="container">
        <div class="d-flex align-items-center justify-content-between mb-4">
