<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Admin - PersonaLISA' %></title>
    
    <!-- CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
    
    <style>
        .admin-sidebar {
            min-height: 100vh;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        
        .admin-sidebar .nav-link {
            color: rgba(255,255,255,0.8);
            border-radius: 8px;
            margin: 2px 0;
            transition: all 0.3s ease;
        }
        
        .admin-sidebar .nav-link:hover,
        .admin-sidebar .nav-link.active {
            color: white;
            background: rgba(255,255,255,0.2);
        }
        
        .admin-content {
            min-height: 100vh;
            background: #f8f9fa;
        }
        
        .product-thumb {
            width: 50px;
            height: 50px;
            object-fit: cover;
        }

        .product-thumb-placeholder {
            width: 50px;
            height: 50px;
            background-color: #f8f9fa;
            border: 1px solid #dee2e6;
        }

        .table td {
            vertical-align: middle;
        }

        .btn-group-sm .btn {
            padding: 0.25rem 0.5rem;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 px-0">
                <div class="admin-sidebar p-3">
                    <!-- Logo -->
                    <div class="text-center mb-4">
                        <h4 class="text-white fw-bold">
                            <i class="fas fa-crown me-2"></i>
                            PersonaLISA
                        </h4>
                        <small class="text-white-50">Painel Administrativo</small>
                    </div>

                    <!-- User Info -->
                    <div class="text-center mb-4 p-3 bg-white bg-opacity-10 rounded">
                        <div class="mb-2">
                            <i class="fas fa-user-circle fa-3x text-white"></i>
                        </div>
                        <h6 class="text-white mb-1"><%= user ? user.name : 'Administrador' %></h6>
                        <small class="text-white-50">Administrador</small>
                    </div>

                    <!-- Navigation -->
                    <nav class="nav flex-column">
                        <a class="nav-link" href="/admin">
                            <i class="fas fa-tachometer-alt me-2"></i>
                            Dashboard
                        </a>
                        <a class="nav-link active" href="/admin/produtos">
                            <i class="fas fa-box me-2"></i>
                            Produtos
                        </a>
                        <a class="nav-link" href="/admin/pedidos">
                            <i class="fas fa-shopping-cart me-2"></i>
                            Pedidos
                        </a>
                        <a class="nav-link" href="#" data-bs-toggle="collapse" data-bs-target="#categoriesMenu">
                            <i class="fas fa-tags me-2"></i>
                            Categorias
                            <i class="fas fa-chevron-down ms-auto"></i>
                        </a>
                        <div class="collapse" id="categoriesMenu">
                            <a class="nav-link ps-4" href="/admin/categorias">
                                <i class="fas fa-list me-2"></i>
                                Listar
                            </a>
                            <a class="nav-link ps-4" href="/admin/categorias/nova">
                                <i class="fas fa-plus me-2"></i>
                                Nova Categoria
                            </a>
                        </div>
                        
                        <hr class="text-white-50 my-3">
                        
                        <a class="nav-link" href="/" target="_blank">
                            <i class="fas fa-external-link-alt me-2"></i>
                            Ver Site
                        </a>
                        <a class="nav-link" href="/auth/perfil">
                            <i class="fas fa-user me-2"></i>
                            Meu Perfil
                        </a>
                        
                        <div class="mt-4">
                            <form action="/auth/logout" method="POST">
                                <button type="submit" class="nav-link btn btn-link text-start w-100 border-0 p-0">
                                    <i class="fas fa-sign-out-alt me-2"></i>
                                    Sair
                                </button>
                            </form>
                        </div>
                    </nav>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-md-9 col-lg-10 px-0">
                <div class="admin-content p-4">
                    <!-- Page Header -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div>
                            <h2 class="text-dark mb-0">Gerenciar Produtos</h2>
                            <small class="text-muted">Visualize e gerencie todos os produtos da PersonaLISA</small>
                        </div>
                        <a href="/admin/produtos/novo" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>
                            Novo Produto
                        </a>
                    </div>

                    <!-- Filters and Search -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-body">
                            <form method="GET" class="row g-3">
                                <div class="col-md-4">
                                    <label class="form-label">Buscar produto</label>
                                    <input type="text" class="form-control" name="search" 
                                           placeholder="Nome ou SKU..." 
                                           value="<%= typeof req.query.search !== 'undefined' ? req.query.search : '' %>">
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Status</label>
                                    <select class="form-control" name="status">
                                        <option value="">Todos</option>
                                        <option value="active" <%= typeof req.query.status !== 'undefined' && req.query.status === 'active' ? 'selected' : '' %>>Ativos</option>
                                        <option value="inactive" <%= typeof req.query.status !== 'undefined' && req.query.status === 'inactive' ? 'selected' : '' %>>Inativos</option>
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Estoque</label>
                                    <select class="form-control" name="stock">
                                        <option value="">Todos</option>
                                        <option value="low" <%= typeof req.query.stock !== 'undefined' && req.query.stock === 'low' ? 'selected' : '' %>>Estoque baixo</option>
                                        <option value="out" <%= typeof req.query.stock !== 'undefined' && req.query.stock === 'out' ? 'selected' : '' %>>Esgotado</option>
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label">&nbsp;</label>
                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-outline-primary">
                                            <i class="fas fa-search"></i>
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Products Table -->
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-white">
                            <div class="d-flex justify-content-between align-items-center">
                                <h6 class="mb-0">
                                    <i class="fas fa-box me-2"></i>
                                    Lista de Produtos
                                </h6>
                                <span class="badge bg-primary">
                                    <%= products.length %> produtos encontrados
                                </span>
                            </div>
                        </div>
                        <div class="card-body p-0">
                            <% if (products && products.length > 0) { %>
                                <div class="table-responsive">
                                    <table class="table table-hover mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th style="width: 60px;"></th>
                                                <th>Produto</th>
                                                <th class="text-center" style="width: 100px;">Estoque</th>
                                                <th class="text-center" style="width: 120px;">Preço</th>
                                                <th class="text-center" style="width: 100px;">Status</th>
                                                <th class="text-center" style="width: 150px;">Ações</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% products.forEach(product => { %>
                                                <tr>
                                                    <!-- Image -->
                                                    <td>
                                                        <% if (product.image) { %>
                                                            <img src="/images/products/<%= product.image %>" 
                                                                 alt="<%= product.name %>" 
                                                                 class="rounded product-thumb">
                                                        <% } else { %>
                                                            <div class="product-thumb-placeholder rounded d-flex align-items-center justify-content-center">
                                                                <i class="fas fa-image text-muted"></i>
                                                            </div>
                                                        <% } %>
                                                    </td>
                                                    
                                                    <!-- Product Info -->
                                                    <td>
                                                        <div>
                                                            <strong><%= product.name %></strong>
                                                            <% if (product.featured) { %>
                                                                <span class="badge bg-warning text-dark ms-1">Destaque</span>
                                                            <% } %>
                                                            <br>
                                                            <small class="text-muted">
                                                                SKU: <%= product.sku || 'N/A' %> | 
                                                                Categorias: <%= product.categories || 'N/A' %>
                                                            </small>
                                                        </div>
                                                    </td>
                                                    
                                                    <!-- Stock -->
                                                    <td class="text-center">
                                                        <% if (product.stock === 0) { %>
                                                            <span class="badge bg-danger">Esgotado</span>
                                                        <% } else if (product.stock <= 5) { %>
                                                            <span class="badge bg-warning text-dark"><%= product.stock %></span>
                                                        <% } else { %>
                                                            <span class="badge bg-success"><%= product.stock %></span>
                                                        <% } %>
                                                    </td>
                                                    
                                                    <!-- Price -->
                                                    <td class="text-center">
                                                        <strong>R$ <%= parseFloat(product.price).toFixed(2).replace('.', ',') %></strong>
                                                        <% if (product.compare_price && product.compare_price > product.price) { %>
                                                            <br>
                                                            <small class="text-muted text-decoration-line-through">
                                                                R$ <%= parseFloat(product.compare_price).toFixed(2).replace('.', ',') %>
                                                            </small>
                                                        <% } %>
                                                    </td>
                                                    
                                                    <!-- Status -->
                                                    <td class="text-center">
                                                        <% if (product.active) { %>
                                                            <span class="badge bg-success">Ativo</span>
                                                        <% } else { %>
                                                            <span class="badge bg-secondary">Inativo</span>
                                                        <% } %>
                                                    </td>
                                                    
                                                    <!-- Actions -->
                                                    <td class="text-center">
                                                        <div class="btn-group btn-group-sm">
                                                            <a href="/produtos/<%= product.slug %>" 
                                                               class="btn btn-outline-info" 
                                                               target="_blank"
                                                               title="Ver no site">
                                                                <i class="fas fa-eye"></i>
                                                            </a>
                                                            <a href="/admin/produtos/<%= product.id %>/editar" 
                                                               class="btn btn-outline-primary"
                                                               title="Editar">
                                                                <i class="fas fa-edit"></i>
                                                            </a>
                                                            <form method="POST" action="/admin/produtos/<%= product.id %>/deletar" 
                                                                  class="d-inline"
                                                                  onsubmit="return confirm('Tem certeza que deseja deletar este produto?')">
                                                                <button type="submit" 
                                                                        class="btn btn-outline-danger"
                                                                        title="Deletar">
                                                                    <i class="fas fa-trash"></i>
                                                                </button>
                                                            </form>
                                                        </div>
                                                    </td>
                                                </tr>
                                            <% }) %>
                                        </tbody>
                                    </table>
                                </div>

                                <!-- Pagination -->
                                <% if (pagination.total > 1) { %>
                                    <div class="card-footer bg-white">
                                        <nav aria-label="Paginação de produtos">
                                            <ul class="pagination justify-content-center mb-0">
                                                <% if (pagination.hasPrev) { %>
                                                    <li class="page-item">
                                                        <a class="page-link" href="?page=<%= pagination.prev %>">
                                                            <i class="fas fa-chevron-left"></i>
                                                        </a>
                                                    </li>
                                                <% } %>

                                                <% for (let i = Math.max(1, pagination.current - 2); i <= Math.min(pagination.total, pagination.current + 2); i++) { %>
                                                    <li class="page-item <%= i === pagination.current ? 'active' : '' %>">
                                                        <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                                                    </li>
                                                <% } %>

                                                <% if (pagination.hasNext) { %>
                                                    <li class="page-item">
                                                        <a class="page-link" href="?page=<%= pagination.next %>">
                                                            <i class="fas fa-chevron-right"></i>
                                                        </a>
                                                    </li>
                                                <% } %>
                                            </ul>
                                        </nav>
                                    </div>
                                <% } %>

                            <% } else { %>
                                <!-- No Products -->
                                <div class="text-center py-5">
                                    <i class="fas fa-box fa-4x text-muted mb-3"></i>
                                    <h4>Nenhum produto encontrado</h4>
                                    <p class="text-muted">
                                        <% if (typeof req.query.search !== 'undefined' && req.query.search) { %>
                                            Não encontramos produtos com os termos de busca "<%= req.query.search %>".
                                        <% } else { %>
                                            Você ainda não tem produtos cadastrados.
                                        <% } %>
                                    </p>
                                    <a href="/admin/produtos/novo" class="btn btn-primary">
                                        <i class="fas fa-plus me-2"></i>
                                        Criar Primeiro Produto
                                    </a>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>