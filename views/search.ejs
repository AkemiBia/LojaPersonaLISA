<div class="container my-5">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Início</a></li>
                    <li class="breadcrumb-item active">Busca</li>
                </ol>
            </nav>
            
            <h1 class="mb-3">
                <% if (query && query.length > 0) { %>
                    Resultados para "<%= query %>"
                <% } else { %>
                    Buscar produtos
                <% } %>
            </h1>
            
            <% if (query && query.length > 0) { %>
                <p class="text-muted">
                    <%= resultsCount %> <%= resultsCount === 1 ? 'produto encontrado' : 'produtos encontrados' %>
                </p>
            <% } %>
        </div>
    </div>

    <!-- Search Form -->
    <div class="row mb-5">
        <div class="col-lg-8 mx-auto">
            <form action="/buscar" method="GET" class="search-form">
                <div class="input-group input-group-lg">
                    <input type="search" class="form-control" name="q" 
                           value="<%= query || '' %>" 
                           placeholder="Digite o que você está procurando..." 
                           autofocus>
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-search"></i> Buscar
                    </button>
                </div>
                
                <!-- Search suggestions -->
                <div class="mt-2">
                    <small class="text-muted">Sugestões: </small>
                    <a href="/buscar?q=totoro" class="badge bg-light text-dark me-1">totoro</a>
                    <a href="/buscar?q=pikachu" class="badge bg-light text-dark me-1">pikachu</a>
                    <a href="/buscar?q=hello kitty" class="badge bg-light text-dark me-1">hello kitty</a>
                    <a href="/buscar?q=chaveiro" class="badge bg-light text-dark me-1">chaveiro</a>
                    <a href="/buscar?q=receita" class="badge bg-light text-dark me-1">receita</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Search Results -->
    <% if (query && query.length >= 2) { %>
        <% if (products && products.length > 0) { %>
            <!-- Results Grid -->
            <div class="row">
                <% products.forEach(product => { %>
                    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                        <%- include('partials/product-card', { product: product }) %>
                    </div>
                <% }) %>
            </div>

            <!-- Load More / Pagination (if needed) -->
            <% if (products.length >= 12) { %>
                <div class="text-center mt-4">
                    <button class="btn btn-outline-primary" onclick="loadMore()">
                        <i class="fas fa-plus me-2"></i>Ver mais produtos
                    </button>
                </div>
            <% } %>

        <% } else { %>
            <!-- No Results -->
            <div class="row">
                <div class="col-12">
                    <div class="text-center py-5">
                        <i class="fas fa-search fa-4x text-muted mb-4"></i>
                        <h3>Nenhum produto encontrado</h3>
                        <p class="text-muted mb-4">
                            Não encontramos produtos com o termo "<%= query %>". 
                            Tente buscar por outras palavras ou confira nossas sugestões abaixo.
                        </p>

                        <!-- Search Tips -->
                        <div class="card bg-light border-0 mb-4">
                            <div class="card-body">
                                <h5>Dicas de busca:</h5>
                                <ul class="list-unstyled mb-0">
                                    <li><i class="fas fa-lightbulb text-warning me-2"></i>Tente termos mais gerais como "pelúcia" ou "chaveiro"</li>
                                    <li><i class="fas fa-lightbulb text-warning me-2"></i>Verifique a ortografia das palavras</li>
                                    <li><i class="fas fa-lightbulb text-warning me-2"></i>Experimente nomes de personagens como "Totoro" ou "Pikachu"</li>
                                </ul>
                            </div>
                        </div>

                        <a href="/produtos" class="btn btn-primary btn-lg">
                            <i class="fas fa-th-large me-2"></i>Ver todos os produtos
                        </a>
                    </div>
                </div>
            </div>
        <% } %>
    <% } else if (query && query.length < 2) { %>
        <!-- Query too short -->
        <div class="row">
            <div class="col-12">
                <div class="alert alert-warning text-center">
                    <i class="fas fa-exclamation-triangle fa-2x mb-3"></i>
                    <h5>Termo de busca muito curto</h5>
                    <p class="mb-0">Digite pelo menos 2 caracteres para buscar produtos.</p>
                </div>
            </div>
        </div>
    <% } %>

    <!-- Popular Categories -->
    <div class="row mt-5">
        <div class="col-12">
            <h4 class="text-center mb-4">Ou explore por categoria</h4>
            <div class="row">
                <div class="col-lg-3 col-md-6 mb-3">
                    <a href="/produtos?categoria=pelucias" class="category-card text-decoration-none">
                        <div class="card border-0 bg-primary text-white">
                            <div class="card-body text-center">
                                <i class="fas fa-teddy-bear fa-3x mb-3"></i>
                                <h5>Pelúcias</h5>
                                <p class="mb-0">Artesanais e únicas</p>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-lg-3 col-md-6 mb-3">
                    <a href="/produtos?categoria=ghibli" class="category-card text-decoration-none">
                        <div class="card border-0 bg-success text-white">
                            <div class="card-body text-center">
                                <i class="fas fa-leaf fa-3x mb-3"></i>
                                <h5>Ghibli</h5>
                                <p class="mb-0">Totoro, No-face e mais</p>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-lg-3 col-md-6 mb-3">
                    <a href="/produtos?categoria=chaveiros" class="category-card text-decoration-none">
                        <div class="card border-0 bg-warning text-dark">
                            <div class="card-body text-center">
                                <i class="fas fa-key fa-3x mb-3"></i>
                                <h5>Chaveiros</h5>
                                <p class="mb-0">Acessórios fofos</p>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-lg-3 col-md-6 mb-3">
                    <a href="/produtos?categoria=receitas" class="category-card text-decoration-none">
                        <div class="card border-0 bg-info text-white">
                            <div class="card-body text-center">
                                <i class="fas fa-book fa-3x mb-3"></i>
                                <h5>Receitas</h5>
                                <p class="mb-0">Faça você mesmo</p>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Popular Products -->
    <% if (!query || (products && products.length === 0)) { %>
        <div class="row mt-5">
            <div class="col-12">
                <h4 class="text-center mb-4">Produtos em destaque</h4>
                <div class="row">
                    <!-- You could add some featured products here -->
                    <div class="col-12 text-center">
                        <p class="text-muted">Conheça nossos produtos mais populares!</p>
                        <a href="/produtos?sort=featured" class="btn btn-outline-primary">
                            <i class="fas fa-star me-2"></i>Ver produtos em destaque
                        </a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
</div>

<script>
// Enhanced search functionality
document.querySelector('.search-form input').addEventListener('keyup', function(e) {
    if (e.key === 'Enter') {
        e.preventDefault();
        this.form.submit();
    }
});

// Category card hover effects
document.querySelectorAll('.category-card').forEach(card => {
    card.addEventListener('mouseenter', function() {
        this.querySelector('.card').style.transform = 'translateY(-5px)';
    });
    
    card.addEventListener('mouseleave', function() {
        this.querySelector('.card').style.transform = 'translateY(0)';
    });
});

// Load more functionality (placeholder)
function loadMore() {
    const currentParams = new URLSearchParams(window.location.search);
    // You could implement pagination here
    showAlert('Funcionalidade em desenvolvimento!', 'info');
}

// Search suggestions click tracking
document.querySelectorAll('.badge[href*="buscar"]').forEach(badge => {
    badge.addEventListener('click', function() {
        // You could track popular searches here
        console.log('Search suggestion clicked:', this.textContent);
    });
});
</script>

<style>
.search-form .form-control:focus {
    border-color: var(--primary-color);
    box-shadow: 0 0 0 0.2rem rgba(111, 66, 193, 0.25);
}

.category-card .card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    cursor: pointer;
}

.category-card:hover .card {
    box-shadow: 0 8px 25px rgba(0,0,0,0.15);
}

.badge {
    transition: all 0.2s ease;
    cursor: pointer;
}

.badge:hover {
    transform: translateY(-1px);
    text-decoration: none;
}

.breadcrumb {
    background: none;
    padding: 0;
}

.alert i {
    display: block;
}

@media (max-width: 768px) {
    .input-group-lg .form-control {
        font-size: 1rem;
    }
    
    .category-card .card-body {
        padding: 1.5rem 1rem;
    }
    
    .category-card h5 {
        font-size: 1.1rem;
    }
}
</style>
