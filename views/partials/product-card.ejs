<div class="card product-card h-100 border-0 shadow-sm">
    <div class="card-img-container position-relative overflow-hidden">
        <% if (product.stock <= 0) { %>
            <div class="product-badge badge-esgotado">
                <span class="badge bg-secondary">Esgotado</span>
            </div>
        <% } else if (product.discount_percent && product.discount_percent > 0) { %>
            <div class="product-badge badge-discount">
                <span class="badge bg-danger">-<%= product.discount_percent %>% OFF</span>
            </div>
        <% } else if (product.price == 0) { %>
            <div class="product-badge badge-free">
                <span class="badge bg-success">Grátis</span>
            </div>
        <% } %>

        <% if (product.stock <= 3 && product.stock > 0) { %>
            <div class="product-badge badge-last">
                <span class="badge bg-warning text-dark">
                    <%= product.stock == 1 ? 'Última peça!' : `${product.stock} restantes` %>
                </span>
            </div>
        <% } %>

        <a href="/produtos/<%= product.slug %>">
            <% if (product.image) { %>
                <img src="/images/products/<%= product.image %>" 
                     alt="<%= product.name %>" 
                     class="card-img-top product-image"
                     loading="lazy">
            <% } else { %>
                <div class="card-img-top product-image-placeholder d-flex align-items-center justify-content-center">
                    <i class="fas fa-image fa-3x text-muted"></i>
                </div>
            <% } %>
        </a>

        <div class="product-overlay">
            <% if (product.stock > 0) { %>
                <button class="btn btn-primary btn-sm add-to-cart-quick" 
                        data-product-id="<%= product.id %>"
                        data-product-name="<%= product.name %>"
                        data-bs-toggle="tooltip"
                        title="Adicionar ao carrinho">
                    <i class="fas fa-cart-plus"></i>
                </button>
            <% } %>
            <a href="/produtos/<%= product.slug %>" 
               class="btn btn-outline-primary btn-sm"
               data-bs-toggle="tooltip"
               title="Ver detalhes">
                <i class="fas fa-eye"></i>
            </a>
        </div>
    </div>

    <div class="card-body d-flex flex-column">
        <h6 class="card-title">
            <a href="/produtos/<%= product.slug %>" class="text-decoration-none text-dark">
                <%= product.name %>
            </a>
        </h6>

        <% if (product.description && product.description.length > 0) { %>
            <p class="card-text text-muted small mb-2">
                <%= product.description.length > 100 ? 
                    product.description.substring(0, 100) + '...' : 
                    product.description %>
            </p>
        <% } %>

        <div class="price-info mt-auto">
            <% if (product.compare_price && product.compare_price > product.price) { %>
                <div class="d-flex align-items-center">
                    <span class="text-success fw-bold me-2">
                        R$ <%= parseFloat(product.price).toFixed(2).replace('.', ',') %>
                    </span>
                    <small class="text-muted text-decoration-line-through">
                        R$ <%= parseFloat(product.compare_price).toFixed(2).replace('.', ',') %>
                    </small>
                </div>
            <% } else { %>
                <div class="fw-bold text-primary">
                    <% if (product.price == 0) { %>
                        <span class="text-success">Grátis</span>
                    <% } else { %>
                        R$ <%= parseFloat(product.price).toFixed(2).replace('.', ',') %>
                    <% } %>
                </div>
            <% } %>

            <% if (product.price > 0 && product.price >= 30) { %>
                <small class="text-muted d-block">
                    ou até 6x de R$ <%= (parseFloat(product.price) / 6).toFixed(2).replace('.', ',') %>
                </small>
            <% } %>
        </div>

        <div class="mt-2">
            <% if (product.stock > 0) { %>
                <div class="d-flex justify-content-between align-items-center">
                    <small class="text-success">
                        <i class="fas fa-check-circle me-1"></i>
                        <%= product.stock %> em estoque
                    </small>
                    <button class="btn btn-primary btn-sm add-to-cart" 
                            data-product-id="<%= product.id %>"
                            data-product-name="<%= product.name %>">
                        Comprar
                    </button>
                </div>
            <% } else { %>
                <div class="d-flex justify-content-between align-items-center">
                    <small class="text-danger">
                        <i class="fas fa-times-circle me-1"></i>
                        Esgotado
                    </small>
                    <button class="btn btn-outline-secondary btn-sm" disabled>
                        Indisponível
                    </button>
                </div>
            <% } %>
        </div>
    </div>
</div>

<style>
.product-card {
    transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.product-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.1) !important;
}

.card-img-container {
    position: relative;
    height: 200px;
}

.product-image {
    height: 100%;
    width: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
}

.product-image-placeholder {
    height: 100%;
    background-color: #f8f9fa;
}

.product-card:hover .product-image {
    transform: scale(1.05);
}

.product-badge {
    position: absolute;
    top: 10px;
    right: 10px;
    z-index: 2;
}

.badge-last {
    top: 50px;
}

.product-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,0.7);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    opacity: 0;
    transition: opacity 0.3s ease;
}

.product-card:hover .product-overlay {
    opacity: 1;
}

.card-title a:hover {
    color: #6f42c1 !important;
}

.price-info {
    border-top: 1px solid #eee;
    padding-top: 10px;
}

@media (max-width: 768px) {
    .card-img-container {
        height: 150px;
    }
    
    .product-overlay {
        opacity: 1;
        background: rgba(0,0,0,0.5);
        padding: 5px;
    }
    
    .product-overlay .btn {
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
    }
}
</style>
